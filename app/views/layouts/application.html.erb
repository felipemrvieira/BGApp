<!DOCTYPE html>
<html>
  <head>
    <title>BG App</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <ul class="nav navbar-nav navbar-right">

        <% if logged_in? %>
          <li><%= link_to 'Log out', logout_path, method: :delete %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Your Profile<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Edit your profile", edit_aluno_path(current_user) %></li>
              <li><%= link_to "View your profile", aluno_path(current_user) %></li>
              <li><a href="#">Something else here</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">Separated link</a></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to 'Log in', login_path %></li>
          
        <% end %>
      </ul>

      <% flash.each do |name, msg| %>
      <ul>
        <li><%= msg %></li>
      </ul>
      <% end %>
      <%= yield %>
    </div>

    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
